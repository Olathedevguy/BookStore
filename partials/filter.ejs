<!DOCTYPE html>
<html lang="en">
<head>
    <style>

        .filter-body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f9f9f9;
        }

        /* Filter Button */
        .filter-container {
            position: relative;
            display: inline-block;
        }

        .filter {
            border-radius: 15px;
            border: 1.5px solid grey;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
            padding: 6px 12px;
            cursor: pointer;
            background: white;
            font-size: 14px;
            transition: 0.3s;
        }

        .filter:hover {
            background: #f0f0f0;
        }

        .filter-bar {
            height: 12px;
            width: 1.5px;
            background: grey;
        }

        .filter-triangle {
            font-size: 12px;
        }

        /* Dropdown Menu */
        .dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            background: white;
            width: 120px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            display: none;
            flex-direction: column;
            padding: 8px 0;
        }

        .dropdown a {
            display: block;
            padding: 8px 12px;
            text-decoration: none;
            color: #333;
            font-size: 14px;
            transition: 0.3s;
        }

        .dropdown a:hover {
            background: #f0f0f0;
        }

        /* Show dropdown when active */
        .dropdown.show {
            display: flex;
        }

    </style>
</head>
<body>

    <div class="filter-container">
        <div class="filter" id="filterBtn">
            <span>Filter</span>
            <div class="filter-bar"></div>
            <div class="filter-triangle">&#x25BC;</div>
        </div>
        <% let genres = ["All","Fiction", "Non-Fiction", "Sci-Fi", "Fantasy", "Mystery", "Romance", "Horror"]; %>
        <div class="dropdown" id="dropdownMenu">
            <% genres.forEach(genre => { %>
                <a href="/books?genre=<%=genre%>" class="" href="" ><%= genre %></a>   
           <% }); %>
        </div>
    </div>

    <script>
        // Toggle dropdown on button click
        document.getElementById("filterBtn").addEventListener("click", function () {
            document.getElementById("dropdownMenu").classList.toggle("show");
        });

        // Close dropdown when clicking outside
        document.addEventListener("click", function (event) {
            if (!document.querySelector(".filter-container").contains(event.target)) {
                document.getElementById("dropdownMenu").classList.remove("show");
            }
        });

