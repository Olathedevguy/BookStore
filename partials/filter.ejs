<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/styles/filter.css">
</head>
<style>
    /* General Styles */
body {
    font-family: 'Poppins', sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 0;
}

/* Centering Filter */
.filter-container {
    position: relative;
    display: inline-block;
}

/* Filter Button */
.filter {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    cursor: pointer;
    background: white;
    border: 2px solid #007bff;
    border-radius: 20px;
    font-size: 14px;
    font-weight: bold;
    transition: 0.3s;
    color: #007bff;
    justify-content: center;
}

.filter:hover {
    background: #007bff;
    color: white;
}

/* Filter Bar */
.filter-bar {
    height: 14px;
    width: 2px;
    background: #007bff;
}

/* Filter Triangle */
.filter-triangle {
    font-size: 14px;
    transition: transform 0.3s;
}

/* Dropdown Menu */
.dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    width: 140px;
    border-radius: 8px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    display: none;
    flex-direction: column;
    padding: 10px 0;
    z-index: 100;
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.3s, transform 0.3s;
}

/* Dropdown Items */
.dropdown a {
    display: block;
    padding: 10px 15px;
    text-decoration: none;
    color: #333;
    font-size: 14px;
    transition: 0.3s;
}

.dropdown a:hover {
    background: #007bff;
    color: white;
}

/* Show dropdown */
.dropdown.show {
    display: flex;
    opacity: 1;
    transform: translateY(0);
}

.flt{
    
    justify-content: center;
    align-items: center;
}

</style>
<body class="flt">

    <div class="filter-container">
        <div class="filter" id="filterBtn">
            <span>Filter</span>
            <div class="filter-bar"></div>
            <div class="filter-triangle">&#x25BC;</div>
        </div>
        <% let genres = ["All","Fiction", "Non-Fiction", "Sci-Fi", "Fantasy", "Mystery", "Romance", "Horror"]; %>
        <div class="dropdown" id="dropdownMenu">
            <% genres.forEach(genre => { %>
                <a href="/books?genre=<%=genre%>"><%= genre %></a>   
           <% }); %>
        </div>
    </div>

    <script src="/scripts/filter.js"></script>

</body>
<script>
    // Toggle dropdown on button click
document.getElementById("filterBtn").addEventListener("click", () => {
    document.getElementById("dropdownMenu").classList.toggle("show");
});

// Close dropdown when clicking outside
document.addEventListener("click",  (event) => {
    if (!document.querySelector(".filter-container").contains(event.target)) {
        document.getElementById("dropdownMenu").classList.remove("show");
    }
});

</script>
</html>
